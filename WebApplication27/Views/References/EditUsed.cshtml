@model WebApplication27.Models.referencesModel


@{
    ViewBag.Title = "Edit";
}
<div class="d-flex justify-content-center" style="margin:5rem; ">

    <div class="card w-75">
        <div class="card-body">
            <fieldset class="scheduler-border">
                <legend class="scheduler-border">Edit Reference</legend>

                @using (Html.BeginForm("editUsedReferences", "References", FormMethod.Post))
                {

                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(model => model.REFERENCE_ID)
                    @Html.ValidationMessageFor(m => m.REFERENCE_ID, "", new { @class = "text-danger" })
                    <div class="form-group">
                        <label>Reference Name :</label><br />
                        @Html.DisplayFor(Models => Models.REFERENCE_NAME, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                        @Html.HiddenFor(Models => Models.REFERENCE_NAME)
                        @Html.ValidationMessageFor(m => m.REFERENCE_NAME, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label> Status</label><span class="text-danger">  *</span><br />
                        @Html.RadioButtonFor(Models => Models.VISIBILIT_STATUS, "Visible", new { required = "required", name = "Status" }) Visible<br />
                        @Html.RadioButtonFor(Models => Models.VISIBILIT_STATUS, "Hide", new { required = "required", name = "Status" }) Hide
                        @Html.ValidationMessageFor(m => m.VISIBILIT_STATUS, "", new { @class = "text-danger" })

                    </div>
                    <div class="form-group">
                        <lable>Display Order :</lable><br />
                        @Html.DisplayFor(Models => Models.DISPLAY_ORDER, new { @class = "form-control", required = "required" })
                        @Html.HiddenFor(Models => Models.DISPLAY_ORDER)
                        @Html.ValidationMessageFor(m => m.DISPLAY_ORDER, "", new { @class = "text-danger" })



                    </div>

                    <button type="submit" style="background-color: #428bca; color: #fff" class="btn">Save</button>
                }

            </fieldset>

        </div>
    </div>
</div>

