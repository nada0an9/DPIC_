

@{
    ViewBag.Title = "Edit";
}

@model WebApplication27.Models.RegionModel

<div class="d-flex justify-content-center" style="margin:5rem; ">

    <div class="card w-75">
        <div class="card-body">
            <fieldset class="scheduler-border">
                <legend class="scheduler-border">Edit Region</legend>
                <form method="post" action="@Url.Action("editUsed", "Regions")">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(model => model.REGION_ID)
                    <div class="form-group">
                        <label>Region Name</label><br />
                        @Html.DisplayFor(Models => Models.REGION_NAME, new { @class = "form-control", required = "required" })
                        @Html.ValidationMessageFor(m => m.REGION_NAME, "", new { @class = "text-danger" })
                        @Html.HiddenFor(Models => Models.REGION_NAME)

                    </div>

                    <div class="form-group">
                        <label>Status</label><span class="text-danger">  *</span><br />
                        @Html.RadioButtonFor(Models => Models.Vsibility_status, "Visible", new { required = "required", name = "Status" }) Visible<br />
                        @Html.RadioButtonFor(Models => Models.Vsibility_status, "Hide", new { required = "required", name = "Status" }) Hide
                        @Html.ValidationMessageFor(m => m.Vsibility_status, "", new { @class = "text-danger" })
                    </div>

                    <button type="submit" style="background-color: #428bca; color: #fff" class="btn">Save </button>


                </form>
            </fieldset>
        </div>
    </div>
</div>

