
@{
    ViewBag.Title = "Edit Name";
}
@model WebApplication27.Models.Profile


<div class="d-flex justify-content-center" style="margin-top:5rem">

    <div class="card w-75">
        <div class="card-body">
            <h5 class="card-title">Personal Information</h5>
            <ul class="list-group list-group-flush">
                <li class="list-group-item">
                    @using (Html.BeginForm("UpdateEmail", "Accounts", FormMethod.Post))

                    {
                        <div class="form-group col-md-6">

                            <label>Email</label><br />
                            @Html.TextBoxFor(Models => Models.EMAIL, new { @class = "form-control", required = "required" })
                            @Html.ValidationMessageFor(m => m.EMAIL, "", new { @class = "text-danger" })

                        </div>
                        <div class="form-group col-md-2">
                            <br />
                            <button type="submit" class="form-control" style="background-color: #428bca;color: #fff">Save</button>

                        </div>
                        @Html.HiddenFor(Models => Models.FULL_NAME)
                        @Html.HiddenFor(Models => Models.PASSWORD)
                    }
                </li>

            </ul>
        </div>
    </div>
</div>


