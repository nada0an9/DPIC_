
@{
    ViewBag.Title = "Profile";
}

@model WebApplication27.Models.Profile

<div class="d-flex justify-content-center" style="margin-top:5rem">

    <div class="card w-75">
        <div class="card-body">
            <h5 class="card-title">Personal Information</h5>
            <ul class="list-group list-group-flush">
                <li class="list-group-item">
                    <div class="form-group">
                        <label>Full Name</label><br />
                        @Html.DisplayFor(Models => Models.FULL_NAME, new { @class = "form-control", required = "required" })
                        @Html.ValidationMessageFor(m => m.FULL_NAME, "", new { @class = "text-danger" })
                        <div class="float-lg-right">
                            <a href="@Url.Action("EditName", "Accounts")" class="btn btn-outline-secondary">Edit Name</a>

                        </div>
                    </div>

                </li>
                <li class="list-group-item">
                    <div class="form-group">
                        <label>Email</label><br />
                        @Html.DisplayFor(Models => Models.EMAIL, new { @class = "form-control", required = "required" })
                        @Html.ValidationMessageFor(m => m.EMAIL, "", new { @class = "text-danger" })
                        <div class="float-lg-right">
                            <a href="@Url.Action("EditEmail", "Accounts")" class="btn btn-outline-secondary">Edit Email</a>

                        </div>
                    </div>
                </li>

                <li class="list-group-item">
                    <div class="form-group">
                        <label>Password</label><br />

                        <div class="float-lg-right">
                            <a href="#" class="btn btn-outline-secondary">Change Password</a>

                        </div>
                    </div>
                </li>
            </ul>
        </div>
    </div>
</div>


