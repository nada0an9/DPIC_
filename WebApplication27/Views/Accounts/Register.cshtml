
@{
    Layout = null;
}

@model WebApplication27.Models.RegisterModel

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <script src="~/Scripts/jquery-3.0.0.min.js"></script>
    <script src="~/Scripts/Chart.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/StyleSheet1.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
    <title>Register</title>
</head>
<body>

    <div class="d-flex" id="wrapper">


        <div id="page-content-wrapper">

            <nav class="navbar pl-5">
                <div class="a">
                    
                    <p style="color: #428bca;font-weight: bold;font-size: 15px;">Drug & Poison Information Center </p>
                    <p style="color:gray; font-size:12px">
                        Clinical Pharmacy Department <br />
                        Pharmaceutical Care Services<br />
                        Prince Mohamed bin Abdulaziz Hospital- Madinah<br />
                    </p>
                </div>

            </nav>

            <div class="container body-content">
                
                <div class="d-flex justify-content-center">
                    <div class="card w-50">
                        <div class="card-body">
                            <br />

                            @using (Html.BeginForm("Register", "Accounts", FormMethod.Post))

                            {

                        <div class="form-row justify-content-center">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.ValidationMessageFor(m => m.FULL_NAME, "", new { @class = "text-danger" })
                            @Html.ValidationMessageFor(m => m.EMAIL, "", new { @class = "text-danger" })
                            @Html.ValidationMessageFor(m => m.User_Type, "", new { @class = "text-danger" })
                            @Html.ValidationMessageFor(m => m.PASSWORD, "", new { @class = "text-danger" })
                            @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })

                            <div class="col-md-8">
                                @Html.Label("Full Name", new { @class = "control-label" })

                                @Html.TextBoxFor(model => model.FULL_NAME, new { @class = "form-control" })

                            </div>
                            <div class="col-md-8">

                                @Html.Label("Email", new { @class = "control-label" })
                                @Html.TextBoxFor(model => model.EMAIL, new { @class = "form-control" })
                            </div>
                            <div class="col-md-8">

                                @Html.Label("User Type", new { @class = "control-label" })

                                <div class="form-check">
                                    @Html.RadioButtonFor(Models => Models.User_Type, "Student")
                                    <label class="form-check-label">
                                        Student / Trainee
                                    </label>
                                </div>
                                <div class="form-check">
                                    @Html.RadioButtonFor(Models => Models.User_Type, "pharmacist")
                                    <label>
                                        Pharmacist
                                    </label>
                                </div>
                            </div>


                            <div class="col-md-8">
                                @Html.Label("Password", new { @class = "control-label" })
                                @Html.PasswordFor(model => model.PASSWORD, new { @class = "form-control", required = "required" })
                            </div>
                            <div class="col-md-8">
                                @Html.Label("Confirm Password", new { @class = "control-label" })
                                @Html.PasswordFor(model => model.ConfirmPassword, new { @class = "form-control", required = "required" })
                            </div>
                            <div class="col-md-8">
                                <br />
                                <button type="submit" class="form-control" style="background-color: #428bca;color: #fff">Register</button>

                            </div>
                            <div class="col-md-8">
                                <br />

                                @Html.Label("Already have an account", new { @class = "control-label" })

                                <a href="@Url.Action("login", "Accounts")">
                                    Login
                                </a>

                            </div>
                        </div>

                            }

                        </div>
                    </div></div>

                    </div>
                    <!-- /#page-content-wrapper -->


                </div>
                    </div>
</body>
</html>
