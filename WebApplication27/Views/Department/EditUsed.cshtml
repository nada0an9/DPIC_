
@{
    ViewBag.Title = "Edit";
}

@model WebApplication27.Models.departmentModel

<div class="d-flex justify-content-center" style="margin:5rem; ">

    <div class="card w-75">
        <div class="card-body">
            <fieldset class="scheduler-border">
                <legend class="scheduler-border">Edit Department</legend>
                <form method="post" action="@Url.Action("editUsed", "Department")">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(model => model.DEPARTMENT_ID)
                    <div class="form-group">
                        <label>Cost Code :</label><br />
                        @Html.DisplayFor(Models => Models.COST_CODE, new { @class = "form-control", required = "required" , onkeypress = "return validateNumber(event)" })
                        @Html.ValidationMessageFor(m => m.COST_CODE, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.COST_CODE)

                    </div>
                    <div class="form-group">
                        <label>Department Name :</label><br />
                        @Html.DisplayFor(Models => Models.DEPARTMENT_NAME, new { @class = "form-control", required = "required" })
                        @Html.ValidationMessageFor(m => m.DEPARTMENT_NAME, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.DEPARTMENT_NAME)

                    </div>
                    <div class="form-group">
                        <label>Status</label><span class="text-danger">  *</span><br />
                        @Html.RadioButtonFor(Models => Models.VSIBILITY_STATUS, "Visible", new { required = "required", name = "Status" }) Visible<br />
                        @Html.RadioButtonFor(Models => Models.VSIBILITY_STATUS, "Hide", new { required = "required", name = "Status" }) Hide
                        @Html.ValidationMessageFor(m => m.VSIBILITY_STATUS, "", new { @class = "text-danger" })
                    </div>


                    <button type="submit" style="background-color: #428bca; color: #fff" class="btn">Save </button>


                </form>
            </fieldset>
        </div>
    </div>
</div>
