    @using (Html.BeginForm("deleteDep", "Department", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.DEPARTMENT_ID)

        <div class="form-horizontal">

            <div class="form-group">

                <div class="col-md-10">
                    <p>Are you sure you want to delete @Html.DisplayFor(Model => Model.DEPARTMENT_NAME) Department</p>

